<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    tools:context=".AppointmentAdapter">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Tytuł spotkania -->
        <TextView
            android:id="@+id/appointmentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spotkanie o 15:00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Data spotkania -->
        <TextView
            android:id="@+id/appointmentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12/12/2024"
            android:textSize="16sp" />

        <!-- Godzina spotkania -->
        <TextView
            android:id="@+id/appointmentTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15:00"
            android:textSize="16sp" />

        <!-- Lokalizacja spotkania -->
        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lokalizacja: Warszawa, ul. Marszałkowska 10"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Numer kontaktowy -->
        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontakt: 123456789"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Przycisków do działań -->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!-- Przycisk Usuń -->

            <!-- Przycisk Edytuj -->
            <Button
                android:id="@+id/deleteButton"
                android:layout_width="0dp"
                android:padding="0dp"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:text="Usuń"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/editButton"
                android:layout_margin="5dp"
                android:padding="0dp"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:text="Edytuj"
                android:textColor="@android:color/white" />

            <!-- Przycisk Udostępnij -->

            <!-- Przycisk Dodaj do Kalendarza -->

            <Button
                android:id="@+id/shareButton"
                android:layout_margin="5dp"
                android:padding="0dp"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:text="Udostępnij"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/addToCalendarButton"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:padding="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_dark"
                android:text="Kalendarz"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
